@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.SecurityQuestion" class="form-control" aria-required="true" placeholder="Security Question" />
                <label asp-for="Input.SecurityQuestion" class="form-label"></label>
                <span asp-validation-for="Input.SecurityQuestion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.SecurityAnswer" class="form-control" aria-required="true" placeholder="Security Answer" />
                <label asp-for="Input.SecurityAnswer" class="form-label"></label>
                <span asp-validation-for="Input.SecurityAnswer" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            @* <button type="button" onclick="GetSecurityQuestion(Input.Email)" class="w-100 btn btn-lg btn-primary">Show Security Question</button> *@
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
